<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/fa_default_medium</item>
        <item name="fontFamily">@font/iransans_web</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_anim</item>
        <item name="android:windowExitAnimation">@anim/fade_out_anim</item>
    </style>

    <style
        name="RatingBar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="colorControlNormal">@color/duskYellow</item>
    </style>

</resources>
