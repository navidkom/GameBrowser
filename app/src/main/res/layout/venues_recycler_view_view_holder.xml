<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/view_default_padding_x2"
    android:layout_marginTop="@dimen/view_default_padding"
    android:layout_marginRight="@dimen/view_default_padding_x2"
    android:layout_marginBottom="@dimen/view_default_padding"
    android:background="@drawable/venue_recycler_selector_back"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/venue_recycler_item_category_image_view"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/item_category_image"
        android:padding="@dimen/view_default_padding_x3"
        android:tint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/venue_recycler_item_name_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/view_default_padding"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/venue_recycler_item_distance_image_view"
        app:layout_constraintStart_toEndOf="@+id/venue_recycler_item_category_image_view"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/venue_recycler_item_distance_image_view"
        android:layout_width="64dp"
        android:layout_height="32dp"
        android:contentDescription="@string/distance_image"
        android:layout_marginTop="@dimen/view_default_padding"
        android:src="@drawable/ic_distance"
        android:tint="@color/colorWhite"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/venue_recycler_item_distance_text_view"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/venue_recycler_item_distance_image_view"
        app:layout_constraintTop_toBottomOf="@+id/venue_recycler_item_distance_image_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
